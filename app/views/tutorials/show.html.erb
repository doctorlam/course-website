<div class="container">
<p id="notice"><%= notice %></p>
<div class="col-md-8">
  <h1><%= image_tag 'tutorial.png' %> <%= @tutorial.name %></h1>
<% if current_user.try(:admin?) %>

  <%= link_to 'Edit', edit_tutorial_path(@tutorial) %> |
<%= link_to 'Back', tutorials_path %>
<% end %>
 <% if @tutorial.video? %>
<div class="video-container">
  	<%= @tutorial.video.html_safe %>
 </div>
 <% end %>
	<div class="tutorial-content">
		<%= simple_format @tutorial.content.html_safe %>
	</div>
 
<h3><%= image_tag 'attachments.png' %> Tutorial Attachments</h3>
            <% if @tutorial.attachment? %>
                <ul><li><a target=_blank href=" <%= @tutorial.attachment.url %>"><strong><%= @tutorial.attachment.original_filename %></strong></a></li></ul>
                <% else %>
                <li>No Document(s) Attached!</li>
              <% end %>
              <br>
         <%= link_to "Submit Assignment", new_submission_path, class: "btn btn-green" %>
 </div>

  <div class="col-md-4 projects-right">
  	
		<div class="padding-right">

			<h3><i class="fas fa-list-ul"></i> Tutorial Objectives:</h3>
		<ul>
			<% for objective in @tutorial.objectives %>
			<li><%= objective.content %></li>
		<% end %>
		</ul>

 
		</div>
			
	</div>
<br>
<br>


</div>
