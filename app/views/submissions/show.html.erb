<div class="container">
<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-6">
        <h1><%= @submission.user.name %>'s Submission for <% for assignment in @submission.assignments %>
                    <%= link_to assignment.name, assignment_url(assignment) %>
                       
                      <% end %></h1>

  <% for assignment in @submission.assignments %>
        <h2>Due Date</h2>
          <p><%= assignment.deadline %></p>
      <% end %>
      <h2>Date Submitted</h2>
      <p><%= @submission.created_at.to_date %> at <%= @submission.created_at %> </p>
        <h2>Submission Content:</h2>
        <p><%= simple_format @submission.description %></p>

        <h2>Attached Submitted Document</h2>
      <% if @submission.document? %>
          <ul><li><a target=_blank href=" <%= @submission.document.url %>"><%= @submission.document.original_filename %></a></li></ul>
          <% else %>
          <li>No Document(s) Attached!</li>
        <% end %>
      </div>
      
    <div class="col-md-6 projects-right">
    <h1>My Grade:</h1>
        <% if @submission.score? %>
          <p><%= @submission.score %> out of <%= @submission.totalscore %> or <%= number_to_percentage(@submission.score.to_f * 100 / @submission.totalscore) %></p>
        <% else %>
          <p>Not graded yet!</p>
        <% end %>
  
      <h1>Instructor Feedback:</h1>
        <p><%= simple_format @submission.feedback %></p>
      <h1>Attachments from Instructor</h1>
        <% if @submission.image? %>
          <ul><li><a target=_blank href=" <%= @submission.image.url %>"><%= @submission.image.original_filename %></a></li></ul>
          <% else %>
          <li>No Feedback Attached.</li>
        <% end %>
      </div>
<% if current_user.try(:admin?) %>
  <%= link_to 'Grade', edit_submission_path(@submission) %> |
<% end %>
</div>
<%= link_to 'Back', pages_gradebook_path %>

</div>