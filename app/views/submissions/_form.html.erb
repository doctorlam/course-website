<%= form_for(@submission) do |f| %>
  <% if @submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
      <% @submission.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% if current_user.try(:admin?) %>
  <div class="third-form-group">
  <h2>Grade Assignment</h2>
    <%= f.label :score %><br>
    <%= f.number_field :score %>
    <br>
    <%= f.label :totalscore %><br>
    <%= f.number_field :totalscore %>
    <br>
    <%= f.label :feedback, 'Instructor Feedback' %><br>
    <%= f.text_area :feedback, class: "form-control", rows: "10" %>
   <%= f.label :attachment %>
    <%= f.file_field :image, :class => "form-control-file", class: "form-control" %>
    </div>
  <% end %>
<div class="second-form-group">
    <h2>Choose the assignment you're turning in.</h2>
       <%= hidden_field_tag "submission[assignment_ids][]", nil %>
        <% Assignment.all.each do |assignment| %>
          <%= radio_button_tag "submission[assignment_ids][]", assignment.id, @submission.assignment_ids.include?(assignment.id), id: dom_id(assignment)%>
          <%= label_tag dom_id(assignment), assignment.name %> | due <%= assignment.deadline %>
          <br />
        <% end %>
    </div>


  <div class="third-form-group">
    <%= f.label :description, 'Write your brilliant answer here. Feel free to use line breaks and write as if a WYSIWYG.' %><br>
    <%= f.text_area :description, class: "form-control", rows: "10" %>
  </div>
  <div class="second-form-group">
  <h2>Upload your assignment</h2>
    <%= f.label :document %>
    <%= f.file_field :document, :class => "form-control-file", class: "form-control" %>

  </div>
  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>