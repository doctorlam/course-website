<div class="container">
<% if flash[:notice] -%>
  <div class = "alert alert-success"><%= flash[:notice] %></div>
<% end %>
<div class="row">
	<div class="col-md-8 show-left">

	  <h1>Lesson:<%= @lesson.name %></h1>

	  <h3>Week:
	  <%= @lesson.week %></h3>


		<h3>Date:
	  <%= @lesson.date %></h3>

		<h3>Objectives:</h3>
		<ol>
			<% for objective in @lesson.objectives %>
			<li><%= objective.content %></li>
		<% end %>
		</ol>

		<h3>In-Class Activities:</h3>
		<ol>
		<% for classactivity in @lesson.classactivitys %>
		<li><%= classactivity.content %></li>
		<% end %>
		</ol>
	</div>
	<div class="col-md-4 show-right">
	<h1>To Do Before Class</h1>
		<h3>Readings:</h3>
		<ol>
		<% for reading in @lesson.readings %>
		<li><%= simple_format reading.content.html_safe %></li>
		<% end %>
		</ol>
		<h3>Homework:</h3>
		<ol>
		<% for homework in @lesson.homeworks %>
		<li><%= simple_format homework.content.html_safe %></li>
		<% end %>
		 <% for assignment in @lesson.assignments %>  
              <li>[Turn In] <%= link_to assignment.name, assignment_url(assignment) %></li>
                
           <% end %>
		</ol>
	<h1>Associated Files</h1>
	<ul>
	<% if @lesson.document? %>
		<li>Presentation file: <a target=_blank href=" <%= @lesson.document.url %>"><%= @lesson.document.original_filename %></a></li>
		<% else %>
	  <li>No Document(s) Attached!</li>
	<% end %>
		<% if @lesson.image? %>
		<li>Other file(s): <a target=_blank href=" <%= @lesson.image.url %>"><%= @lesson.image.original_filename %></a></li>
		
	<% else %>
	  <li>No Document(s) Attached!</li>
	<% end %>
	</ul>
	

	<h1>Related Project(s)</h1>
	 <% for project in @lesson.projects %>
      	<ul><li><%= link_to project.name, project_url(project) %></li></ul>
               
     <% end %>
</div>
</div><!--row-->


<%= commontator_thread(@lesson) %>


<% if current_user.try(:admin?) %>
	<%= link_to 'Edit', edit_lesson_path(@lesson) %> |
	<%= link_to 'Back', lessons_path %>
<% end %>
<%= link_to('Back to all lessons', :back) %>

</div>
