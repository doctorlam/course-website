<% if current_user.try(:admin?) %>
<%= link_to 'New Lesson', new_lesson_path, class: "btn btn-green" %>
<br><br>
<% end %>
<div class="month-view container">
<%= month_calendar events: @lessons do |date, lessons| %>
  <%= date %>
  <% lessons.each do |lesson| %>
    <div>
        <p style="font-weight: bold; font-size:1.4rem !important"><%= link_to lesson.name, lesson %></p>

  <% end %>

    <% lessons.each do |lesson| %>
        <p style="font-weight: bold; border-bottom: 1px solid black; margin-bottom: 0px !important; margin-top: 10px">Readings:</p>
      <ul>
       <% for reading in lesson.readings %>
        
            <li><%= reading.content.html_safe %></li>
              <% end %>
      </ul>
      <% end %>
        <% lessons.each do |lesson| %>

          <p style="font-weight: bold; border-bottom: 1px solid black; margin-bottom: 0px !important; margin-top: 10px">Homework:</p>
          <ul>
         <% for homework in lesson.homeworks %>
           <% if homework.content? %>
            
                <li><%= homework.content.html_safe %></li>

              <% end %>
              <% end %>
            <% for assignment in lesson.assignments %>  
                <li><span style="color: #00b894; font-weight: bold">[Turn In]</span> <%= link_to assignment.name, assignment_url(assignment) %></li>  
            <% end %>
          </ul>
    </div>
  <% end %>

<% end %>

</div><!--/month-view-->


