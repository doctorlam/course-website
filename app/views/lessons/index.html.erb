<p id="notice"><%= notice %></p>
<div class="container">
<% if current_user.try(:admin?) %>
<%= link_to 'New Lesson', new_lesson_path, class: "btn btn-primary" %>
<% end %>
<h1>Course Schedule</h1>
<div class="table-responsive">
<table class="table table-striped table-condensed table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Week</th>
      <th>Date</th>
       <th>Objectives</th>
       <th>In-Class Activities</th>
        <th>Readings</th>
         <th>Homework</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td class="name"><%= link_to [lesson.name].join(" "), lesson %></td>
        <td><%= lesson.week %></td>
        <td><%= lesson.date %></td>

      <td><% for objective in lesson.objectives %>
        <ul><li><%= objective.content %></li></ul>
      <%end%></td>

      <td><% for classactivity in lesson.classactivitys %>
        <ul><li><%= classactivity.content %></li></ul>
      <%end%></td>

      <td><% for reading in lesson.readings %>
        <ul><li><%= reading.content %></li></ul>
      <%end%></td>

      <td><% for homework in lesson.homeworks %>
        <ul><li><%= homework.content %></li></ul>
      <%end%></td>


        <td><%= link_to 'View Lesson', lesson %></td>
        <% if current_user.try(:admin?) %>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


</div>
