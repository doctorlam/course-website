<% if current_user.try(:admin?) %>
<%= link_to 'New Lesson', new_lesson_path, class: "btn btn-green" %>
<br><br>
<% end %>
<div class="month-view container">
<%= month_calendar events: @lessons do |date, lessons| %>
  <%= date.to_formatted_s(:short) %>
  <% lessons.each do |lesson| %>
    <div>
        <p style="font-weight: bold; font-size:1.15rem !important"><%= link_to truncate(lesson.name, :length => 60),lesson %></p>

  <% end %>

    <% lessons.each do |lesson| %>
    <% if lesson.readings.any? %>
       <div class="click-reading"><p><i class="fas fa-book-open"></i> Readings  <i style="cursor:pointer;" class="toggle2 fas fa-plus-circle"></i></p>
      <% else %>
    <% end %>
    <div class="hover-reading">
              <h3>Readings for <%= date %></h3>

      <ul>
       <% for reading in lesson.readings %>
            <li><%= reading.content.html_safe %></li>
      <% end %>

            </ul>

    </div><!--/item-content-->
  </div>
  
      <% end %>

        <% lessons.each do |lesson| %>
        <% if lesson.homeworks.any? or lesson.assignments.any? %>

               <div class="click-hw"><p><i class="fas fa-check-double"></i> Homework: <i style="cursor:pointer;" class="toggle fas fa-plus-circle"></i></p>
        <% else %>

        <% end %>
      <div class="hover-hw">
        <h3>Homework for <%= date %></h3>
          <ul>
         <% for homework in lesson.homeworks %>
          <% if homework.content? %>
                <li><%= homework.content.html_safe %></li>
            <% else %>
                <li>Nada</li>
            <% end %>

            <% end %>
            <% for assignment in lesson.assignments %>  
                <li><span style="color: #00b894; font-weight: bold">[Turn In]</span> <%= link_to assignment.name, assignment_url(assignment) %></li>  
            <% end %>
          </ul>
        </div><!--/item-content target-->
      </div><!--/click-hw-->
    </div>
  <% end %>
<% end %>

</div><!--/month-view-->


