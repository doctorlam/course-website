<div class="container">
<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-md-8">
       <%= link_to 'Submit an assignment', new_submission_path, class: 'btn btn-primary' %>
      <h1><%= current_user.name %>'s Grades</h1>
      <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th><%= sort_link @search, :assignments_name, "Assignment" %></th>
                <th>Date Submitted</th>
                <th><%= sort_link @search, :assignments_deadline, "Due Date" %></th>
                <th>Score</th>
                <th>Attached file</th>
              </tr>
            </thead>

             <tbody>
              <% @submissions.each do |submission| %>
                <tr>
                <% for assignment in submission.assignments %>
                  <td><%= link_to assignment.name, submission %></td>
                <% end %>
                  <td><%= submission.created_at.to_date %>, <%= submission.created_at %></td>
                <% for assignment in submission.assignments %>
                  <td><%= assignment.deadline %></td>
                <% end %>
                  <% if submission.score? %>
                    <td><%= submission.score %>/<%= submission.totalscore %> or <%= number_to_percentage(submission.score.to_f * 100 / submission.totalscore) %></td>
                  <% else %>
                    <td>Not graded yet!</td>
                  <% end %>
                  
                  <% if submission.document? %>
                <td><a target=_blank href=" <%= submission.document.url %>"><%= submission.document.original_filename %></a></td>
              <% else %>
              <td>No Document(s) Attached!</td>
            <% end %>      
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div><!--col-md-8-->
      <div class="col-md-4 projects-right">
        <div class="padding-right">

            <h1>Real-Time Grade</h1> <h4><%= @submissions.sum(:score) %>/<%= @submissions.sum(:totalscore) %> or <%= number_to_percentage @submissions.sum(:score).to_f * 100 / @submissions.sum(:totalscore) %></h4>
 
        </div>
      </div>
      <div class="col-md-4 projects-right">
        <div class="padding-right">

          <h1>Homework Assignments</h1>
            <ul>
              <% @assignments.each do |assignment| %>

                <li>[<%= link_to assignment.deadline, assignment %>] <%= link_to assignment.name, assignment %></lis>
              <% end %>
            </ul>

        </div>
      </div>
    </div><!--row-->

   


</div>
